/* pages/activity/activity.wxss */
page{
  padding-bottom: 150rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.container{
  width: 100%;
  margin-top: 20rpx;
}
.shopChild{
  padding: 32rpx 25rpx 32rpx 50rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.hasShop{
  background-color: white;
}
.noShop{
  font-size: 30rpx;
  color: #999999;
  text-align: center;
  padding: 180rpx 0;
  background-color: white;
}
.shopChild{
  border: 1px solid #f2f2f2;
}
.shopTitle{
  font-size: 30rpx;
  line-height: 60rpx;
  position: relative;
}
.shopTitle view{
  width: 100%;
  padding-right: 200rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.shopStatus{
  position:absolute;
  right: 0;
  top: 0;
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  font-size: 26rpx;
  background-color: #999999;
  text-align: center;
  color: #ffffff;
  border-radius: 5rpx;
}
.shopText{
  color: #999999;
  font-size: 28rpx;
  line-height: 40rpx;
  padding-top: 10rpx;
}
.addActivity{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
}
.addActivity navigator{
  text-align: center;
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 0;
  border-color: #ff8933;
  line-height: 130rpx;
  font-size: 28rpx;
  color: white;
  background-color: #ff8933;
}
.addActivity navigator text{
  display: inline-block;
  line-height: 48rpx;
  padding-left: 68rpx;
  background: url('data:image/png;base64,') no-repeat left center;
  background-size: 45rpx;
}
.shopStatus1{
  background-color: #f2f2f2;
}
.shopStatus2{
  background-color: #ff8933;
}