/* pages/myDoor/myDoor.wxss */
page{
  padding-bottom: 120rpx;
}
.door{
  margin-top: 20rpx;
}
.elsedoor{
  background-color: white;
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-top: 20rpx solid #f2f2f2;
  margin-top: 0rpx;
}
.doorBox{
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #f2f2f2;
}
.doorIn{
  width: 100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding: 20rpx 50rpx;
  color: #333333;
  line-height: 60rpx;
  min-height: 100rpx;
  position:relative;
}
.doorLeft{
  position: absolute;
  left: 50rpx;
  top: 20rpx;
  font-size: 28rpx;
}
.doorRight{
  width: 100%;
  padding: 0 20rpx 0 155rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  -webkit-box-sizing: border-box;
  text-align: center;
  
}
.pickerBox{
  display: flex;
  display:-webkit-flex;
}
.pickerBox .select{
  width: 50%;
  background: url('data:image/png;base64,') no-repeat right center;
  background-size: 20rpx;
}
.drLeft{
  text-align: left;
}
.addr{
  text-align: center;
}
.doorRight input{
  line-height: 60rpx;
  font-size: 28rpx;
  height: 60rpx;
}
.imgRight{
  width: 250rpx;
  display: block;
  padding: 0rpx;
  font-size: 20rpx;
  line-height: 0;
  float: right;
}
.imgRight image{
  width: 100%;
  
}
.twoBtn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  display:-webkit-flex;
}
.twoBtn view{
  display: block;
  width: 50%;
  background-color: white;
  border-radius: 0;
  border-color: white;
  outline: 0;
  color: #999999;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.twoBtn view:nth-child(2){
  background-color: #ff8933;
  color: white;
}
.getCode button{
  display: block;
  width: 200rpx;
  height: 60rpx;
  border-radius: 4rpx;
  line-height: 60rpx;
  color: #ffffff;
  text-align: center;
  font-size: 26rpx;
  background-color: #999999;
  border-color: #999999;
  float: right;
}
.doorIn textarea{
  width: 100%;
  height: 120rpx;
   line-height: 60rpx; 
  font-size: 28rpx;
}
.addressClass{
  line-height: 60rpx; 
  font-size: 28rpx;
}
.upImg{
  width: 100%;
  padding: 48rpx 0 ;
  background-color: #f2f2f2;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  text-align: center;
  color: #999999;
  font-size: 22rpx;
  line-height: 36rpx;
}
.upAdd{
  font-size: 0;
  line-height: 0;
  width: 70rpx;
  margin: 0 auto 20rpx;
}
.upAdd image{
  width: 100%;
}
.doorBox:nth-last-child(1){
  border: 0
}
.subBtn view{
  border-top: 1px solid #f2f2f2;
}
.subBtn view:nth-child(2){
  border-top: 1px solid #ff8933;
}