/* pages/exchangeIntro/exchangeIntro.wxss */
.main{
  margin-top: 20rpx;
  width: 100%;
  padding:  0 25rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  background-color: white;
}

.echangeBox{
  width: 100%;
  min-height: 120rpx;
  line-height: 120rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  position: relative;
}
.headBox{
  min-height: 170rpx;
  line-height: 170rpx;
}
.echangeBox text:nth-child(2){
  position: absolute;
  right: 0;
  top: 0;
  color: #999999;
}
.exchangeHead{
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 148rpx;
  height: 148rpx;
  overflow: hidden;
  margin: 10rpx 0;
  font-size: 0rpx;
}
.exchangeHead image{
  width: 100%;
}
.popWin{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  display: -webkit-flex;
  -webkit-align-items: center;
  -webkit-justify-content: center;
  -webkit-flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.68);
}
.popWinIn{
  width: 80%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding: 50rpx 40rpx;
  background-color: white;
  border-radius: 5rpx;
}
.popInput{
    border: 1px solid #888888;
    border-radius: 4rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 0 30rpx;
}
.popInput input{
  width: 100%;
  height: 78rpx;
  color: #333333;
  font-size: 28rpx;
}
.popBtn{
  display: flex;
  display: -webkit-flex;
  margin-top: 30rpx;
}
.popBtn button{
  width: 46%;
  height: 70rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #999999;
  border: 1px solid #ff8933;
  background-color: transparent;
}
.popBtn button:nth-child(2){
  margin-left: 8%;
  background-color: #ff8933;
  color: white;
}
.sexBox{
  width: 100%;
  font-size: 30rpx;
  padding: 0 10rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
  position: relative;
}
.sexBox>view{
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1px solid #999999;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  top: 50%;
  margin-top: -18rpx;
  right: 10rpx;
  
}
.sexBox:nth-child(2){
  border: 0px;
}
.sexBox.hasSex>view{
  border-color: #ff8933;
}
.sexBox.hasSex>view>view{
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
justify-content: center;
align-items: center;
flex-direction: column;
display: -webkit-flex;
-webkit-align-items: center;
-webkit-justify-content: center;
-webkit-flex-direction: column;
}
.sexBox.hasSex>view>view>view{
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%; 
  background-color: #ff8933;
}
