/* pages/public/public.wxss */

.tipsBox {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.67);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    display: -webkit-flex;
    -webkit-align-items: center;
    -webkit-justify-content: center;
    -webkit-flex-direction: column;
    z-index: 10000;
}
.tips {
    width: 78.67%;
    background-color: white;
    padding: 40rpx 0 60rpx;
    border-radius: 20rpx;
}
.tips>text{
  text-align: center;
  font-size: 30rpx;
  display: block;
  line-height: 60rpx;
  width:100%;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  padding: 0 40rpx;
}
.tips>text:nth-child(2){
  text-align: center;
  margin-top: 20rpx;
}
.btnBox {
    width: 80%;
    margin: 40rpx auto 0;
}
.btnBox>view {
    line-height: 84rpx;
   
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
    color: #999999;
    width: 100%;
    float: left;
    border: 1px solid #ff8933;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.btnBox>view:nth-child(2) {
    float: right;
    color: white;
    background-color: #ff8933;
    border-color: #ff8933;
}