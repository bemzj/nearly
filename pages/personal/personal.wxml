<!--普通用户个人中心-->
<view class='personal' wx:if='{{loginType==0}}'>
  <view class='perHead'>
    <image src='../../img/person1.jpg' mode='widthFix'></image>
    <view class='phIn'>
      <view class='headBox'>
        <view class='headBoxIn'>
          <image src='{{useIntro.avatarUrl}}' mode='widthFix' ></image>
        </view>
        <view class='sex'>
          <image src='{{useIntro.gender==2?"../../img/woman.png":""}}{{useIntro.gender==1?"../../img/man.png":""}}' mode='widthFix'></image>
        </view>
      </view>
      <view class='name'>
        <text>{{useIntro.nickName}}</text>
      </view>
    </view>
  </view>
  <view class='moreFun'>
    <view class='func'>
      <navigator url='../exchangeIntro/exchangeIntro'>个人信息</navigator>
    </view>
    <view class='func'>
      <navigator url='../myCollect/myCollect'>我的收藏</navigator>
    </view>
    <view class='func'>
      <navigator  url='../myCard/myCard'>我的优惠卡</navigator>
    </view>
    <view class='func noBorder'>
      <navigator  url='../address/address'>我的地址</navigator>
    </view>
    <view class='func marginTop'>
      <navigator url='../shopApply/shopApply'>申请成为商家</navigator>
    </view> 
  </view>
</view>
